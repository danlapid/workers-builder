{
  "name": "workers-builder",
  "version": "0.1.0",
  "description": "Build and bundle Workers at runtime for Cloudflare Worker Loader binding",
  "repository": {
    "type": "git",
    "url": "https://github.com/danlapid/workers-builder"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "node build.mjs && tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/semver": "^7.0.0",
    "esbuild": "^0.27.0",
    "typescript": "catalog:"
  },
  "dependencies": {
    "es-module-lexer": "^2.0.0",
    "esbuild-wasm": "^0.27.0",
    "resolve.exports": "^2.0.0",
    "semver": "^7.0.0",
    "smol-toml": "^1.0.0",
    "sucrase": "^3.0.0"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ]
}
