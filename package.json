{
  "name": "dynamic-worker-bundler-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter=dynamic-worker-bundler run build",
    "dev": "pnpm -r --filter=dynamic-worker-bundler run dev",
    "clean": "pnpm -r run clean",
    "typecheck": "pnpm -r --filter=dynamic-worker-bundler run typecheck",
    "generate-types": "pnpm -r --filter=dynamic-worker-bundler-tests --filter=basic-example run generate-types",
    "test": "pnpm run build && pnpm -r --filter=dynamic-worker-bundler-tests run test",
    "test:watch": "pnpm -r --filter=dynamic-worker-bundler-tests run test:watch",
    "example": "pnpm run build && pnpm -r --filter=basic-example run dev",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm test && changeset publish",
    "ci:publish": "pnpm build && node scripts/publish.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8"
  },
  "engines": {
    "node": ">=22"
  }
}
