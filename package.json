{
  "name": "workers-builder-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter=workers-builder run build",
    "dev": "pnpm -r --filter=workers-builder run dev",
    "clean": "pnpm -r run clean",
    "typecheck": "pnpm -r --filter=workers-builder run typecheck",
    "generate-types": "pnpm -r --filter=workers-builder-tests --filter=basic-example run generate-types",
    "test": "pnpm run build && pnpm -r --filter=workers-builder-tests run test",
    "test:watch": "pnpm -r --filter=workers-builder-tests run test:watch",
    "example": "pnpm run build && pnpm -r --filter=basic-example run dev",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm test && changeset publish",
    "ci:publish": "pnpm build && node scripts/publish.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.0.0"
  },
  "engines": {
    "node": ">=22"
  }
}
